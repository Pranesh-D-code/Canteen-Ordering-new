<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.canteen.controller.FoodCardController"
      spacing="8" styleClass="food-card">

    <StackPane styleClass="food-image">
        <ImageView fx:id="imageView" fitWidth="220" fitHeight="140" preserveRatio="true"/>
    </StackPane>

    <Label fx:id="nameLabel" text="Food name" styleClass="food-name" wrapText="true"/>

    <Label fx:id="categoryLabel" text="Category" styleClass="food-category"/>

    <Label fx:id="priceLabel" text="â‚¹ 0.00" styleClass="food-price"/>

    <HBox spacing="10" styleClass="qty-box" alignment="CENTER">
        <Label text="Qty" styleClass="small-muted"/>
        <Spinner fx:id="qtySpinner" styleClass="qty-spinner"/>
    </HBox>

    <Button text="Add to Cart" fx:id="addBtn" onAction="#addToCart" styleClass="add-btn"/>
</VBox>
